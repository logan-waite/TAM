<?php
    class myFirstClass
    {
        // property declaration
        public $var = 'first';

        // method declaration
        public function displayVar() {
            echo $this->var;
        }
    }

    class mySecondClass
    {
        // property declaration
        public $var = 'a default value';

        // method declaration
        public function displayVar() {
            echo $this->var;
        }
    }

    $class = "myFirstClass"

    $what = new $class;

    var_dump($what);
?>
